<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.auth.TeacherAuthController">

    <Text text="Авторизация преподавателя">
        <font>
            <Font size="18"/>
        </font>
    </Text>

    <GridPane hgap="10" vgap="10">
        <Label text="ФИО:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="fullnameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Телефон:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Button text="Войти" onAction="#handleLogin" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>